<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>64</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>List Badge</masterLabel>
  <description>Shows a clickable icon that takes the customer to their wishlist(s).</description>
  <capabilities>
    <capability>lightning__ServerRenderableWithHydration</capability>
  </capabilities>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Page">
      <paletteSection>Open Code</paletteSection>
    </targetConfig>
    <targetConfig targets="lightningCommunity__Default">
      <property name="iconType" type="String" default="heart" label="Icon" datasource="java://siteforce.customComponent.datasource.WishlistIconTypeDataSource"></property>
      <property name="isOutlined" translatable="false" type="Boolean" default="true"></property>
      <designLayout>
        <designSection>
          <designLayoutItems>
            <designLayoutProperty name="iconType"></designLayoutProperty>
            <designLayoutProperty name="isOutlined" cbVisibleIf="iconType=true"></designLayoutProperty>
          </designLayoutItems>
        </designSection>
      </designLayout>
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>